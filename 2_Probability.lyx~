status open

\begin_layout Plain Layout
\begin_inset ERT
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\begin_inset ERT
status open

\begin_layout Plain Layout

<<fig.height=2.5, fig.width=5>>=
\end_layout

\begin_layout Plain Layout

